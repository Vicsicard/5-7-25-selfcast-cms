{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "builds": [
    {
      "src": "dist/server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "dist/**",
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "/dist/server.js",
      "headers": {
        "cache-control": "no-cache, no-store, must-revalidate"
      }
    },
    {
      "src": "/api/(.*)",
      "dest": "/dist/server.js",
      "headers": {
        "cache-control": "s-maxage=0"
      }
    },
    {
      "src": "/admin(.*)",
      "dest": "/dist/server.js"
    },
    {
      "src": "/login",
      "dest": "/dist/server.js"
    },
    {
      "src": "/logout",
      "dest": "/dist/server.js"
    },
    {
      "src": "/favicon.ico",
      "dest": "/public/favicon.ico"
    },
    {
      "src": "/public/(.*)",
      "dest": "/public/$1",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/dist/server.js"
    }
  ]
}
