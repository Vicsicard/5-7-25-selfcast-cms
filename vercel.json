{
  "version": 2,
  "builds": [
    {
      "src": "src/server.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "dist/**",
        "excludeFiles": "(**/node_modules/**|dist/media/**)",
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "/src/server.ts",
      "headers": {
        "cache-control": "no-cache, no-store, must-revalidate"
      }
    },
    {
      "src": "/api/(.*)",
      "dest": "/src/server.ts",
      "headers": {
        "cache-control": "s-maxage=0"
      }
    },
    {
      "src": "/admin(.*)",
      "dest": "/src/server.ts"
    },
    {
      "src": "/login",
      "dest": "/src/server.ts"
    },
    {
      "src": "/logout",
      "dest": "/src/server.ts"
    },
    {
      "src": "/favicon.ico",
      "dest": "/public/favicon.ico"
    },
    {
      "src": "/public/(.*)",
      "dest": "/public/$1",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/src/server.ts"
    }
  ],
  "functions": {
    "src/server.ts": {
      "includeFiles": "dist/**/*",
      "excludeFiles": "(dist/media/**|**/node_modules/**)",
      "memory": 1024,
      "maxDuration": 10
    }
  }
}
